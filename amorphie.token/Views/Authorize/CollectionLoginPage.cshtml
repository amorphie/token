@model amorphie.token.core.Models.Account.Login

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Asap:ital,wght@0,400;0,500;0,600;1,400;1,500&display=swap"
    rel="stylesheet">
  <link rel="stylesheet" href="/ebanking/login/assets/css/css/style.css">
  <link rel="stylesheet" href="/ebanking/login/assets/css/_LoginLayout.css" />
  <link rel="stylesheet" href="/ebanking/login/assets/css/css/bootstrap-4.1.3/css/bootstrap.min.css" />

  <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>

</head>

<body>
  <div class="page">
    <div class="wrapper">
      <div class="header mb-1">
        <div class="header-icon">
          <img src="/ebanking/login/assets/burgan.svg" />
        </div>
        <div class="header-language">
          English
        </div>
      </div>
      <div class="content two-columns mb-2 has-divider">
        <form id="login-form" asp-action="CollectionLogin" asp-controller="Login" method="post">
          <input type="hidden" asp-for="TransactionId" />
          <input type="hidden" asp-for="Code" />
          <div class="content-inner">
            <div class="title mb-4">
              Burganbank Collection Tahsilat Uygulamasına Hoşgeldiniz
            </div>

            <div class="login-form mb-4">
              <label class="input mb-2">
                <div class="icon">
                  <img src="/ebanking/login/assets/person.svg" />
                </div>

                <input type="text" asp-for="UserName" placeholder="Kimlik/Vergi Numarası" />
              </label>

              <label class="input mb-2">
                <div class="icon">
                  <img src="/ebanking/login/assets/lock.svg" />
                </div>

                <input type="text" asp-for="Password" size="12" class="flex-1" placeholder="Şifre" type="password" />


              </label>
              <div class="flex gap-1">
                <div class="button qrButton qr-button items-center justify-center">
                  <img src="/ebanking/login/assets/qr.svg" />
                </div>


                <div id="submit-login" class="button Lbutton login-button flex-1 flex items-center justify-center">
                  GİRİŞ YAP
                </div>
              </div>
              @if (ViewBag.HasError)
              {
                <div class="form-group mt-3">
                  <div class="ErrPan validation-summary-errors text-center">
                        @ViewBag.ErrorDetail
                  </div>
                </div>
              }


            </div>



          </div>


        </form>
      </div>
      <div class="footer">
        <div class="footer-links">

        </div>
        <div class="footer-contact">
          <div class="footer-contact-number">
            0 850 222 8222
          </div>
          <div class="footer-contact-text">
            7/24 İletişim Merkezi
          </div>
        </div>
      </div>
    </div>
  </div>
  <script>
    var submitButton = document.getElementById("submit-login");
    var loginForm = document.getElementById('login-form');
    submitButton.addEventListener('click', async function (e) {
      loginForm.submit();
    });
  </script>
</body>

</html>